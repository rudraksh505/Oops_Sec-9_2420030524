package proj3;
import java.util.Scanner;

class AutoboxingExample {
 public static void main(String[] args) {
     Scanner scanner = new Scanner(System.in);

     System.out.print("Enter an integer: ");
     int primitiveInt = scanner.nextInt();
     Integer wrapperInt = primitiveInt;

     System.out.print("Enter a double: ");
     double primitiveDouble = scanner.nextDouble();
     Double wrapperDouble = primitiveDouble;

     System.out.print("Enter a boolean (true/false): ");
     boolean primitiveBoolean = scanner.nextBoolean();
     Boolean wrapperBoolean = primitiveBoolean;

     System.out.println("Primitive int: " + primitiveInt + ", Autoboxed Integer: " + wrapperInt);
     System.out.println("Primitive double: " + primitiveDouble + ", Autoboxed Double: " + wrapperDouble);
     System.out.println("Primitive boolean: " + primitiveBoolean + ", Autoboxed Boolean: " + wrapperBoolean);

     scanner.close();
 }
}